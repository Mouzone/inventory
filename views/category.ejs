<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title><%= title %></title>
        <link rel="stylesheet" href="/category.css">
    </head>
    <body>
        <h1><%= title %></h1>
        <form action="/category/<%= category_id %>" method="GET">
            <% categories.forEach(category => { %>
                <label>
                    <input
                            type="checkbox"
                            name="category_id"
                            value="<%= category.category_id%>"
                            <%= to_check.includes(`${category.category_id}`) ? "checked" : ""%>
                    >
                    <%= category.category_name %>
                </label>
            <% }) %>
            <button type="submit">Submit</button>
        </form>
        <% emojis.forEach(emoji => {%>
            <a href="/emoji/<%= emoji.emoji_id %>"><%= emoji.encoding%></a>
        <% }) %>
        <form action="/category/<%= category_id %>/delete" method="POST">
            <button type="submit"> Delete This Category From All Emojis </button>
        </form>
    </body>
</html>