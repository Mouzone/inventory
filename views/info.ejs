<!DOCTYPE html>
<html>
    <head>
        <title><%= title %></title>
    </head>
    <body>
        <title><%= title %></title>
        <div>
            <div><%= emoji.encoding %></div>
            <div>
                <%= emoji.emoji_name %>
                <%= emoji.date_added %>
                <div>
                    <form action="/info/<%= emoji.emoji_id %>" method="POST">
                        <label for="category"></label>
                        <input type="text" id="category" name="category">
                        <button type="submit"> Add Tag </button>
                    </form>
                    <% categories.forEach(category => { %>
<!--                            todo: upon pressing category get taken to page of all emojis with category-->
                        <a href=""><%= category.category_name %></a>
                    <% }) %>
                </div>
            </div>
        </div>
    </body>
</html>